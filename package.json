{
  "name": "graphql_clean-architecture_boilerplate",
  "version": "0.0.1",
  "description": "GraphQL + Clean Architecture boilerplate",
  "main": "index.js",
  "author": "tuancnttbk93@gmail.com",
  "license": "ISC",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:auto-fix": "eslint . --ext .ts --quiet --fix",
    "build:ts": "tsc",
    "build:clean": "rimraf ./dist",
    "build": "npm run build:clean && npm run build:ts",
    "start": "node dist/index.js",
    "create-schema": "graphql codegen",
    "create-types": "graphql-schema-typescript --namespace=GQL --global=true --typePrefix='' generate-ts --output=src/__typedefs/graphqlTypes.d.ts src/__typedefs",
    "generate-typedefs": "npm run create-schema && npm run create-types"
  },
  "dependencies": {
    "apollo": "2.33.4",
    "apollo-server": "2.25.1",
    "awilix": "^4.3.4",
    "bcrypt": "5.0.1",
    "cors": "2.8.5",
    "express": "4.17.1",
    "graphql-cli": "^4.1.0",
    "graphql-tools": "7.0.5",
    "jsonwebtoken": "8.5.1",
    "lodash.mergewith": "^4.6.2",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@graphql-cli/codegen": "^1.17.26",
    "@graphql-codegen/schema-ast": "^1.18.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.0",
    "@types/jsonwebtoken": "8.5.1",
    "@types/lodash.mergewith": "^4.6.6",
    "@types/node": "^10.12.20",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.5.0",
    "@typescript-eslint/parser": "4.5.0",
    "concurrently": "^4.1.0",
    "eslint": "7.11.0",
    "eslint-config-prettier": "6.14.0",
    "eslint-plugin-prettier": "3.1.4",
    "graphql": "^15.5.1",
    "graphql-schema-typescript": "^1.2.8",
    "nodemon": "^1.18.9",
    "prettier": "^2.3.2",
    "ts-loader": "^4.5.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^3.0.3",
    "wait-on": "^3.2.0"
  }
}
